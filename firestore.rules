rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Read-only access to existing shared collections
    // Only authenticated users can read
    match /send_local_authorities/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /independent_schools/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /isochrone_cache/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // New app-specific collections
    // Authenticated users can read/write their own reports
    match /assess_reports/{reportId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
                    && request.resource.data.generatedBy == request.auth.token.email;
      allow update, delete: if request.auth != null
                           && resource.data.generatedBy == request.auth.token.email;
    }

    // Only authenticated users can access user data
    match /assess_users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
